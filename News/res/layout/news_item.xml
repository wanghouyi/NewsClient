<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- <ImageView
        android:id="@+id/ivPic"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_launcher" /> -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18sp" />
 
    <TextView
        android:id="@+id/tvArticle_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvSource"
        android:layout_alignBottom="@+id/tvSource"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/tvSource"
        
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvPublish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginRight="42dp"
        android:layout_marginTop="32dp"
       
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvPublish_time"
        android:layout_toRightOf="@+id/tvTitle"
         />

</RelativeLayout>